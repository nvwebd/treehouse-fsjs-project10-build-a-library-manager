extends patrons

block patrons_content
  h1 Patron: Andrew Chalkley
  form(action='/patrons/edit_patron')
    p
      label(for='first_name') First Name
      input#first_name(type='text' value=patron.first_name name='first_name' required)
    p
      label(for='last_name') Last Name
      input#last_name(type='text' value=patron.last_name name='last_name' required)
    p
      label(for='address')  Address
      input#address(type='text' value=patron.address name='address' required)
    p
      label(for='email') Email
      input#email(type='text' value=patron.email name='email' required)
    p
      label(for='library_id') Library ID
      input#library_id(type='text' value=patron.library_id name='library_id' required)
    p
      label(for='zip_code') Zip Code
      input#zip_code(type='text' value=patron.zip_code name='zip_code' required)
    p
      input(type='submit' value='Update')
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron
        th Loaned on
        th Return by
        th Returned on
        th Action
    tbody
      tr
        td
          a(href='book_detail.html') Harry Potter and the Goblet of Fire
        td
          a(href='patron_detail.html') Andrew Chalkley
        td 2015-12-11
        td 2015-12-18
        td
        td
          a.button(href='return_book.html') Return Book
      tr
        td
          a(href='book_detail.html') A Brief History of Time
        td
          a(href='patron_detail.html') Andrew Chalkley
        td 2015-12-12
        td 2015-12-19
        td
        td
          a.button(href='return_book.html') Return Book

