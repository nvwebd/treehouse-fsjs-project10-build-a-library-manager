extends patrons

block patrons_content
  h1 New Patron
  form(action='/patrons/new' method='post')
    p
      label(for='first_name') First Name
      input#first_name(type='text' name='first_name' value=prevValues.first_name || "")
      if errors.first_name
        em.form-error=errors.first_name.message
    p
      label(for='last_name') Last Name
      input#last_name(type='text' name='last_name' value=prevValues.last_name || "")
      if errors.last_name
        em.form-error=errors.last_name.message
    p
      label(for='address')  Address
      input#address(type='text' name='address' value=prevValues.address || "")
      if errors.address
        em.form-error=errors.address.message
    p
      label(for='email') Email
      input#email(type='text' name='email' value=prevValues.email || "")
      if errors.email
        em.form-error=errors.email.message
    p
      label(for='library_id') Library ID
      input#library_id(type='text' name='library_id' value=prevValues.library_id || "")
      if errors.library_id
        em.form-error=errors.library_id.message
    p
      label(for='zip_code') Zip Code
      input#zip_code(type='text' name='zip_code' value=prevValues.zip_code || "")
      if errors.zip_code
        em.form-error=errors.zip_code.message
    p
      input(type='submit' value='Create New Patron')

