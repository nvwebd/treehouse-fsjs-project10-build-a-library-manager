extends books

block book_content
  h1=title
  form(action='/books/new' method='post')
    p
      label(for='title') Title
      input#title(type='text' name='title' value=(previousValues.title))
      if errors.title
        em.form-error=errors.title.message
    p
      label(for='author') Author
      input#author(type='text' name='author' value=(previousValues.author))
      if errors.author
        em.form-error=errors.author.message
    p
      label(for='genre') Genre
      input#genre(type='text' name='genre' value=(previousValues.genre))
      if errors.genre
        em.form-error=errors.genre.message
    p
      label(for='first_published') First Published
      input#first_published(type='text' name='first_published' value=(previousValues.first_published))
      if errors.first_published
        em.form-error=errors.first_published.message
    p
      input(type='submit' value='Create New Book')
