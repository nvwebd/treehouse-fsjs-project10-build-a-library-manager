extends books

block book_content
  p
    a.button(href='/books/new') Create New Book
  p
    | Filters
    a(href='/books')  All
    |  |
    a(href='/books/overdue_books')  Overdue
    |  |
    a(href='/books/checked_books')  Checked Out

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
          td
            a(href='/books/book_details/' + book.id)=book.title
          td=book.author
          td=book.genre
          td=book.first_published
