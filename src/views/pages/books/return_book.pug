extends books

block book_content
  h1 Return Book
  p
    strong Book Title:
    |  !{loan.book.title}
  p
    strong Loaned By:
    |   !{loan.patron.first_name + " " + loan.patron.last_name}
  p
    strong Loaned On:
    |   !{loan.loaned_on}
  p
    strong Return By:
    |   !{loan.return_by}
  form(action="/loans/return_book/"+loan.id method="post")
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' value=returned_on || prevValues.returned_on name="returned_on")
      if errors.returned_on
        em.form-error=errors.returned_on.message
    p
      input(type='submit' value='Return Book')
