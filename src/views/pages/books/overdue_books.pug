extends books

block book_content
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in overdueBooks
        tr
          td
            a(href='/books/book_details/' + book.id)=book.title
          td=book.author
          td=book.genre
          td=book.first_published

      tr
        td
          a(href='book_detail.html') Harry Potter and the Goblet of Fire
        td J.K. Rowling
        td Fantasy
        td 2000
      tr
        td
          a(href='book_detail.html') A Brief History of Time
        td Stephen Hawking
        td Non Fiction
        td 1988
      tr
        td
          a(href='book_detail.html') The Universe in a Nutshell
        td Stephen Hawking
        td Non Fiction
        td 2001

