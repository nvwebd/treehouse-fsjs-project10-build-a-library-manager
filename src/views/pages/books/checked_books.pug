extends books

block book_content
  p
    a.button(href='/books/new') Create New Book
  p
    | Filters
    a(href='/books')  All
    |  |
    a(href='/books/overdue_books')  Overdue
    |  |
    a(href='/books/checked_books')  Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each checked in checkedBooks
        tr
          td
            a(href='/books/book_details/' + checked.book.id)=checked.book.title
          td=checked.book.author
          td=checked.book.genre
          td=checked.book.first_published
